{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/recommended",
    "plugin:jest/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["babel", "vue", "import", "prettier"],
  "rules": {
    "indent": ["error", 2],
    "space-before-function-paren": ["error", "never"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "curly": ["error", "multi-or-nest"],
    "semi": "off",
    "no-console": "off",
    "vue/html-self-closing": "off",
    "vue/max-attributes-per-line": [
      "error",
      {
        "singleline": 3,
        "multiline": {
          "max": 1,
          "allowFirstLine": true
        }
      }
    ],
    "prettier/prettier": ["error"]
  }
}
